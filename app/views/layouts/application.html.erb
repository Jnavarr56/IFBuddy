<!DOCTYPE html>
<html>
  <head>
    <title>IFBuddy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="turbolinks-cache-control" content="no-cache">

  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %> <%= "flashing" %>">
        <%= value %>
      </div>
    <% end %>
    <%= yield %>

    <div class="modal fade" id="global-error-modal" tabindex="-1" role="dialog" aria-labelledby="global-error-modal-title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="global-error-modal-title"></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body" id="global-error-modal-content">
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal" id="global-error-refresh-button">Ok</button>
        </div>
        </div>
    </div>
    </div>

  </body>
</html>
