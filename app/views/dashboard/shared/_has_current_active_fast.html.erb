<% current_status = @user.fasts.last.current_status %>

<h3 style="color: <%= current_status[:status].to_s == "Eating" ? "#42f459" : "#ffa5a5" %>;"
    id="active-fast-schedule"
    data-action= <%= current_status[:status].to_s %> 
    data-future-date= "<%= current_status[:date_until] %>"
><%= current_status[:status].to_s.upcase %></h3>


<div id="cont" class="<%= current_status[:status].to_s == "Eating" ? "eating-text" : "fasting-text" %>" data-curr-window-length="<%= current_status[:status].to_s == "Eating" ? @user.fasts.last.eating_window_length : @user.fasts.last.fasting_window_length %>" data-pct="">
<svg style="stroke:<%= current_status[:status].to_s == "Eating" ? "#42f459" : "#ff4949" %>;" id="svg" width="200" height="200" viewPort="0 0 100 100" version="1.1" xmlns="http://www.w3.org/2000/svg">
  <circle r="90" cx="100" cy="100" fill="transparent" stroke-dasharray="565.48" stroke-dashoffset="100"></circle>
  <circle style="stroke:<%= current_status[:status].to_s == "Eating" ? "#42f459" : "#ff4949" %>;" id="bar" r="90" cx="100" cy="100" fill="transparent" stroke-dasharray="565.48" stroke-dashoffset="1000"></circle>
</svg>
</div>

<br>

<p class="mobile-window-info text-center font-weight-bold">
    Your current schedule is:
</p>
<ul class="mobile-window-info">
    <li><%= @user.fasts.last.fasting_window_length %> [Fasting]</li>
    <li><%= @user.fasts.last.eating_window_length %> [Eating]</li>
</ul>


<% if !@user.has_checked_in_today %>

    <a id="check-in-button" href="#" class="btn btn-warning">Check In</a>

    <br>

<% end %>

<%= link_to "Start a New Fast Schedule", new_fast_path, id: "start-new-fast-link", class: 'btn btn-info' %>

<br>

<%= link_to "End Current Fast Schedule", root_path, id: 'end-fast-post-link', class: 'btn btn-danger' %>

<br>


