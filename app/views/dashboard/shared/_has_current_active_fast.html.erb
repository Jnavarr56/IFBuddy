<% current_status = @user.fasts.last.current_status %>

<h3 
    id="active-fast-schedule"
    data-action= <%= current_status[:status].to_s %> 
    data-future-date= "<%= current_status[:date_until] %>"
>loading...</h3>

<br>

<h6>
    Your current fast schedule is 
    <%= @user.fasts.last.fasting_window_length %> [Fasting]
    <%= @user.fasts.last.eating_window_length %> [Eating].
</h6>

<% if @user.has_checked_in_today %>

    <p style="margin: 0;">You've checked in today!</p>

<% else %>

    <a id="check-in-button" href="#" class="btn btn-primary">Check In</a>

    <br>

<% end %>

<%= link_to "End Current Fast Schedule", root_path, id: 'end-fast-post-link', class: 'btn btn-primary' %>

<br>

<%= link_to "Start a New Fast Schedule", new_fast_path, id: "start-new-fast-link", class: 'btn btn-primary' %>

<br>


<%= link_to "Your Fast History", fasts_path, class: 'btn btn-primary' %>